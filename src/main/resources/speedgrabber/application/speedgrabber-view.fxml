<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="speedgrabber.application.SpeedGrabberController">
    <Label fx:id="gameLabel" text="No Game Active">
      <VBox.margin>
         <Insets bottom="4.0" top="20.0" />
      </VBox.margin></Label>
    <ChoiceBox fx:id="categoryDropdown" prefWidth="150.0" />
   <Button mnemonicParsing="false" onAction="#showCategoryLeaderboard" prefHeight="26.0" prefWidth="150.0" text="Show Leaderboard">
      <VBox.margin>
         <Insets top="4.0" />
      </VBox.margin></Button>
   <HBox alignment="CENTER">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
      <children>
         <Slider fx:id="maxRunsSlider" blockIncrement="1.0" majorTickUnit="5.0" max="20.0" minorTickCount="4" prefHeight="15.0" prefWidth="150.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
      </children>
   </HBox>
    <TextArea fx:id="leaderboardArea" editable="false" prefHeight="248.0" prefWidth="560.0">
      <VBox.margin>
         <Insets left="15.0" right="15.0" top="5.0" />
      </VBox.margin></TextArea>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
        <TextField fx:id="gameSearchField" onAction="#searchGame" />
        <Button fx:id="gameSearchButton" mnemonicParsing="false" onAction="#searchGame" text="Search" />
    </HBox>
</VBox>
