<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="speedgrabber.application.SpeedGrabberController">
    <Label fx:id="gameLabel" text="No Game Selected">
      <VBox.margin>
         <Insets bottom="5.0" top="20.0" />
      </VBox.margin></Label>
    <ChoiceBox fx:id="categoryDropdown" prefWidth="150.0" />
   <Button mnemonicParsing="false" onAction="#showCategoryLeaderboard" text="Show Leaderboard">
      <VBox.margin>
         <Insets />
      </VBox.margin></Button>
    <TextArea fx:id="leaderboardArea" editable="false" prefHeight="200.0" prefWidth="200.0">
      <VBox.margin>
         <Insets left="20.0" right="20.0" top="20.0" />
      </VBox.margin></TextArea>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
        <TextField fx:id="gameSearchField" onAction="#searchGame" />
        <Button fx:id="gameSearchButton" mnemonicParsing="false" onAction="#searchGame" text="Search" />
    </HBox>
</VBox>
