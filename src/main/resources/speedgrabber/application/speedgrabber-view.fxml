<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.*?>
<AnchorPane prefHeight="500.0" prefWidth="500.0" stylesheets="@styles/bootstrap3.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="speedgrabber.application.SpeedGrabberController">
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" layoutX="20.0" layoutY="10.0" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
        </padding>
        <VBox alignment="TOP_CENTER">
            <Label fx:id="gameNameLabel" alignment="CENTER" contentDisplay="CENTER" disable="true"
                   text="No Game Selected">
                <font>
                    <Font name="System Italic" size="13.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="2.0"/>
                </VBox.margin>
            </Label>
            <HBox>
                <TextField fx:id="gameSearchField" alignment="TOP_LEFT" onAction="#searchGame" prefHeight="113.0"
                           prefWidth="460.0" promptText="Enter game abbreviation or id..." styleClass="first"/>
                <Button mnemonicParsing="false" onAction="#searchGame" prefHeight="31.0" prefWidth="136.0"
                        text="Search">
                    <styleClass>
                        <String fx:value="sm"/>
                        <String fx:value="primary"/>
                        <String fx:value="last"/>
                    </styleClass>
                </Button>
            </HBox>
            <HBox alignment="TOP_CENTER" spacing="10.0">
                <VBox alignment="TOP_CENTER">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <ChoiceBox fx:id="categoryDropdown" disable="true" prefWidth="145.0"/>
                    <Label fx:id="levelIndicator" disable="true" text="*indicates per-level category">
                        <font>
                            <Font name="System Italic" size="10.0"/>
                        </font>
                        <VBox.margin>
                            <Insets top="5.0"/>
                        </VBox.margin>
                    </Label>
                </VBox>
                <VBox alignment="TOP_CENTER">
                    <ChoiceBox fx:id="levelDropdown" disable="true" prefWidth="145.0" styleClass="middle"/>
                    <CheckBox fx:id="levelBox" alignment="CENTER_RIGHT" contentDisplay="BOTTOM" disable="true"
                              minHeight="16.0" mnemonicParsing="false" onAction="#configureDropdowns" prefHeight="25.0"
                              prefWidth="75.0" text="Show Levels">
                        <VBox.margin>
                            <Insets top="2.0"/>
                        </VBox.margin>
                        <font>
                            <Font size="10.0"/>
                        </font>
                    </CheckBox>
                </VBox>
                <VBox alignment="TOP_CENTER">
                    <Button fx:id="leaderboardButton" disable="true" mnemonicParsing="false"
                            onAction="#getLeaderboardTableData" prefHeight="26.0" prefWidth="146.0"
                            text="Show Leaderboard">
                        <styleClass>
                            <String fx:value="success"/>
                            <String fx:value="sm"/>
                        </styleClass>
                    </Button>
                    <HBox alignment="CENTER_RIGHT">
                        <Label fx:id="runsLabel" disable="true" prefHeight="15.0" text="Runs Per Page:">
                            <font>
                                <Font size="10.0"/>
                            </font>
                            <HBox.margin>
                                <Insets right="-5.0"/>
                            </HBox.margin>
                        </Label>
                        <Spinner fx:id="runsSpinner" disable="true" prefHeight="20.0" prefWidth="76.0" scaleX="0.7"
                                 scaleY="0.7">
                            <HBox.margin>
                                <Insets top="-2.0"/>
                            </HBox.margin>
                        </Spinner>
                    </HBox>
                </VBox>
                <padding>
                    <Insets top="10.0"/>
                </padding>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </HBox>
            <TableView fx:id="leaderboardTable" disable="true" fixedCellSize="0.0" prefHeight="300.0">
                <columns>
                    <TableColumn fx:id="placeColumn" prefWidth="43.39999580383301" text="#"/>
                    <TableColumn fx:id="playerColumn" prefWidth="114.99999237060547" text="Player"/>
                    <TableColumn fx:id="timeColumn" prefWidth="136.0" text="Time"/>
                    <TableColumn fx:id="dateColumn" prefWidth="163.0" text="Date"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            <HBox spacing="5.0">
                <VBox.margin>
                    <Insets bottom="5.0" top="5.0"/>
                </VBox.margin>
                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearAllFields" prefHeight="0.0"
                        prefWidth="80.0" text="Clear All">
                    <styleClass>
                        <String fx:value="xs"/>
                        <String fx:value="warning"/>
                    </styleClass>
                </Button>
            </HBox>
            <TitledPane expanded="false" text="Sorting &amp; Filtering">
                <styleClass>
                    <String fx:value="info"/>
                    <String fx:value="first"/>
                </styleClass>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
            </TitledPane>
            <TitledPane expanded="false" layoutX="10.0" layoutY="438.0" text="Game Information">
                <styleClass>
                    <String fx:value="danger"/>
                    <String fx:value="middle"/>
                </styleClass>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
            </TitledPane>
            <TitledPane expanded="false" layoutX="10.0" layoutY="480.0" text="Category Information">
                <styleClass>
                    <String fx:value="success"/>
                    <String fx:value="last"/>
                </styleClass>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
            </TitledPane>
        </VBox>
    </ScrollPane>
</AnchorPane>
